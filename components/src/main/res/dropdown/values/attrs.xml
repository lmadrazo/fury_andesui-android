<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="AndesDropdown" tools:ignore="ResourceName">

        <attr name="andesDropdownLabel" format="reference" />
        <attr name="andesDropdownHelper" format="reference" />
        <attr name="andesDropdownPlaceHolder" format="reference" />

        <attr name="AndesDropdownMenuType" format="enum">
            <enum name="bottomsheet" value="9002" />
            <enum name="floatingmenu" value="9003" />
        </attr>

        <attr name="andesDropdownSize" format="enum">
            <enum name="small" value="10000" />
            <enum name="medium" value="10001" />
            <enum name="large" value="10002" />
        </attr>

    </declare-styleable>

</resources>