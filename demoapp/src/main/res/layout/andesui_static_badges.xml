<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/andes_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="@string/andes_badge_pill"
            android:textColor="#000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/andes_badge_loud_badges_text" />

                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="loud"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_neutral"
                    app:andesBadgePillType="neutral" />

                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="loud"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_highlight"
                    app:andesBadgePillType="highlight" />


                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="loud"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_success"
                    app:andesBadgePillType="success" />


                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="loud"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_warning"
                    app:andesBadgePillType="warning" />


                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="loud"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_error"
                    app:andesBadgePillType="error" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/andes_badge_quiet_badges_text" />

                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="quiet"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_neutral"
                    app:andesBadgePillType="neutral" />

                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="quiet"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_highlight"
                    app:andesBadgePillType="highlight" />


                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="quiet"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_success"
                    app:andesBadgePillType="success" />


                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="quiet"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_warning"
                    app:andesBadgePillType="warning" />


                <com.mercadolibre.android.andesui.badge.AndesBadgePill
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/badge_margin_vertical"
                    app:andesBadgePillBorder="standard"
                    app:andesBadgePillHierarchy="quiet"
                    app:andesBadgePillSize="small"
                    app:andesBadgePillText="@string/andes_badge_error"
                    app:andesBadgePillType="error" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="@string/andes_badge_other"
            android:textColor="#000"
            android:textSize="24sp" />

        <com.mercadolibre.android.andesui.badge.AndesBadgePill
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgePillBorder="corner"
            app:andesBadgePillHierarchy="loud"
            app:andesBadgePillSize="large"
            app:andesBadgePillText="@string/andes_demoapp_label_corner"
            app:andesBadgePillType="neutral" />

        <com.mercadolibre.android.andesui.badge.AndesBadgePill
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgePillBorder="rounded"
            app:andesBadgePillHierarchy="loud"
            app:andesBadgePillSize="large"
            app:andesBadgePillText="@string/andes_demoapp_label_rounded"
            app:andesBadgePillType="highlight" />

        <com.mercadolibre.android.andesui.badge.AndesBadgePill
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgePillBorder="standard"
            app:andesBadgePillHierarchy="loud"
            app:andesBadgePillSize="large"
            app:andesBadgePillText="@string/andes_demoapp_label_standard"
            app:andesBadgePillType="warning" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:text="@string/andes_badge_dot"
            android:textColor="#000"
            android:textSize="24sp" />

        <com.mercadolibre.android.andesui.badge.AndesBadgeDot
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgeDotType="neutral" />

        <com.mercadolibre.android.andesui.badge.AndesBadgeDot
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgeDotType="highlight" />

        <com.mercadolibre.android.andesui.badge.AndesBadgeDot
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgeDotType="success" />

        <com.mercadolibre.android.andesui.badge.AndesBadgeDot
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgeDotType="warning" />

        <com.mercadolibre.android.andesui.badge.AndesBadgeDot
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/badge_margin_vertical"
            app:andesBadgeDotType="error" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/andesui_demoapp_label_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_vertical_2x"
                android:text="@string/andes_demoapp_label_more" />

            <com.mercadolibre.android.andesui.button.AndesButton
                android:id="@+id/andesui_demoapp_andes_badge_specs_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_vertical"
                app:andesButtonHierarchy="loud"
                app:andesButtonSize="medium"
                app:andesButtonText="@string/andes_badge_specs"
                app:layout_constraintTop_toBottomOf="@id/andesui_demoapp_label_more" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>