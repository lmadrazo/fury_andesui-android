<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/andes_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/andes_card_showcase"
            android:textColor="#000"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.mercadolibre.android.andesui.card.AndesCard
                android:id="@+id/card_example_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                app:andesCardHierarchy="primary"
                app:andesCardPadding="small"
                app:andesCardStyle="elevated"
                app:andesCardTitle="@string/andes_card_showcase"
                app:andesCardType="warning" />

            <com.mercadolibre.android.andesui.card.AndesCard
                android:id="@+id/card_example_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                app:andesCardHierarchy="primary"
                app:andesCardPadding="small"
                app:andesCardStyle="outline"
                app:andesCardType="highlight" />

            <com.mercadolibre.android.andesui.card.AndesCard
                android:id="@+id/card_example_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                app:andesCardHierarchy="secondary"
                app:andesCardPadding="small"
                app:andesCardStyle="elevated"
                app:andesCardTitle="@string/andes_card_showcase"
                app:andesCardType="none" />

            <com.mercadolibre.android.andesui.card.AndesCard
                android:id="@+id/card_example_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                app:andesCardHierarchy="primary"
                app:andesCardPadding="medium"
                app:andesCardStyle="outline"
                app:andesCardTitle="@string/andes_card_showcase"
                app:andesCardType="none" />

            <com.mercadolibre.android.andesui.card.AndesCard
                android:id="@+id/card_example_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:andesCardHierarchy="secondary_dark"
                app:andesCardPadding="medium"
                app:andesCardStyle="elevated"
                app:andesCardTitle="@string/andes_card_showcase"
                app:andesCardType="none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/andesui_demoapp_label_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_vertical"
                android:text="@string/andes_demoapp_label_more" />

            <com.mercadolibre.android.andesui.button.AndesButton
                android:id="@+id/andesui_demoapp_andes_card_specs_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/button_margin_vertical"
                app:andesButtonHierarchy="quiet"
                app:andesButtonSize="medium"
                app:andesButtonText="@string/andes_card_specs"
                app:layout_constraintTop_toBottomOf="@id/andesui_demoapp_label_more" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>